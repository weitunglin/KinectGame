<Window x:Class="KinectGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1560" ResizeMode="CanMinimize"
        Loaded="Kinect_Class2_Loaded" Unloaded="Kinect_Class2_Unloaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageSource" HorizontalAlignment="Left" Height="720" Margin="143,51,0,0" VerticalAlignment="Top" Width="1280" Grid.ColumnSpan="4"/>
        <Canvas x:Name="ImageCanvas"  HorizontalAlignment="Left" Height="720" Margin="148,51,0,0" VerticalAlignment="Top" Width="1280" Background="Transparent" Grid.ColumnSpan="4"/>
        <TextBlock x:Name="txtLeft" Height="60" Margin="10,74,1410.6,736.4" Grid.ColumnSpan="4"><Run Text="txt left"/></TextBlock>
        <TextBlock x:Name="txtRight" Height="60" Margin="10,139,1410.6,671.4" Grid.ColumnSpan="4"><Run Text="txt right"/></TextBlock>
        <TextBlock x:Name="SpineShoulderDepthTxt" Height="60" Margin="10,260,1410.6,550.4" Grid.ColumnSpan="4"><Run Text="spineshoudlerDepth"/></TextBlock>
        <TextBlock x:Name="Pause" Height="60"><Run Text="Pause"/></TextBlock>
        <Button x:Name="startBtn" Grid.ColumnSpan="4" Margin="544,494,474.6,208.4" RenderTransformOrigin="0.5,0.5" Click="startBtn_Click" Content="StartBtn" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.012"/>
                    <TranslateTransform/>
                </TransformGroup>

            </Button.RenderTransform>

        </Button>


        <Canvas Grid.ColumnSpan="4" Margin="0,0,-0.4,0.4">
            <Button x:Name="pausebtn" Content="Pause" Canvas.Left="541" Canvas.Top="256" Width="532" Height="191"/>
            <TextBlock x:Name="Touch" TextWrapping="Wrap" Text="touch" Canvas.Top="432" Height="383" Width="145"/>
        </Canvas>
    </Grid>
</Window>
