<Window x:Class="KinectGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1440" ResizeMode="CanMinimize"
        Loaded="Kinect_Class2_Loaded" Unloaded="Kinect_Class2_Unloaded">
    <Grid>
        <Image x:Name="ImageSource" HorizontalAlignment="Left" Height="720" Margin="70,0,0,0" VerticalAlignment="Top" Width="1280"/>
        <Canvas x:Name="ImageCanvas"  HorizontalAlignment="Left" Height="720" Margin="70,0,0,0" VerticalAlignment="Top" Width="1280" Background="Transparent"/>
    </Grid>
</Window>
